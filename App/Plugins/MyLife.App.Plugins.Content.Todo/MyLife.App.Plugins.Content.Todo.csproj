<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<AvaloniaUseCompiledBindingsByDefault>True</AvaloniaUseCompiledBindingsByDefault>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\Common\MyLife.Common.BuildTimeAugmentation\MyLife.Common.BuildTimeAugmentation.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>
	
	<ItemGroup>
		<Folder Include="Models\" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Views\TodoItemView.axaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
		<Compile Update="Views\TodoListSelectorView.axaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
		<Compile Update="Views\TodoTabContentView.axaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="xcopy /F /Y $(ProjectDir)\$(OutDir)\$(AssemblyName).dll $(SolutionDir)\App\MyLife.App.Desktop\bin\$(Configuration)\$(TargetFramework)\plugins\$(AssemblyName)\&#xD;&#xA;xcopy /F /Y $(ProjectDir)\$(OutDir)\$(AssemblyName).deps.json $(SolutionDir)\App\MyLife.App.Desktop\bin\$(Configuration)\$(TargetFramework)\plugins\$(AssemblyName)\&#xD;&#xA;&#xD;&#xA;xcopy /F /Y $(ProjectDir)\$(OutDir)\$(AssemblyName).dll $(SolutionDir)\App\Android\MyLife.App.Android\Assets\plugins\$(AssemblyName)\&#xD;&#xA;xcopy /F /Y $(ProjectDir)\$(OutDir)\$(AssemblyName).deps.json $(SolutionDir)\App\Android\MyLife.App.Android\Assets\plugins\$(AssemblyName)\" />
	</Target>

</Project>
